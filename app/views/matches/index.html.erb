<%#-------- div for matching photos------- %>
<%= render "shared/navbar" %>

<div>
  <div class= "show-image">
  <div class="profile-pic-left">
    <img class= "img-circle-small" src="<%= @generator_image %>" alt="">
  </div>

  <div class="comp-icon">
    <%= image_tag "compatibility_icon_pink.png" %>
    <h2> <%= @comp_percentage %> %</h2>

  </div>

  <div class="profile-pic-right">
    <img class= "img-circle-small" src="<%= @buddy_image %>" alt="">
  </div>
  </div>

  <%#-------- div for matching stats------- %>
  <div class="stats-wrap">

    <div class="stats">
      <div class="stat">
        <h3>
          <% sum = 0 %>
          <% @played_this_week_gen.each do |play| %>
          <% sum += play.duration_ms.to_i%>
          <% end %>
          <%= sum/60000 %>
        </h3>
        <p>min/day</p>
      </div>

      <div class="stat">
       <h2>Your addiction this week: </h2>
      </div>

      <div class="stat">
        <h3>
          <% sum = 0 %>
          <% @played_this_week_bud.each do |play| %>
          <% sum += play.duration_ms.to_i%>
          <% end %>
          <%= sum/60000 %>
        </h3>
        <p>min/day</p>
      </div>
    </div>

    <div class="stats">
      <div class="stat">
         <h3>
          <% sum = 0 %>
          <% @played_this_year_gen.each do |play| %>
          <% sum += play.duration_ms.to_i%>
          <% end %>
          <%= sum/60000 %>
        </h3>
        <p>min/day</p>
      </div>

      <div class="stat">
       <h2>Average listenning this year: </h2>
      </div>

      <div class="stat">
         <h3>
          <% sum = 0 %>
          <% @played_this_year_bud.each do |play| %>
          <% sum += play.duration_ms.to_i%>
          <% end %>
          <%= sum/60000 %>
        </h3>
        <p>min/day</p>
      </div>
    </div>
  </div>
</div>

<div class="divs-center">
  <%= form_with url: user_matches_path, method: :post do %>
    <button type="submit" class="spotify-button">
      <%= image_tag 'Spotify_Icon_RGB_Green.png', alt: 'Spotify Icon', class: "spotify-icon" %>
      <span>Generate Playlist</span>
    </button>
  <% end %>
</div>

<%# Common stats %>

<h2>Top Common Artists</h2>

<div class="scrolling-wrapper-flexbox" style="height: 100%; padding-bottom: 10px; overflow-y: hidden;">
  <% if @shared_artists && @shared_artists.any? %>
    <% @shared_artists.each do |artist| %>
      <%= link_to artist_path(id: artist.album.artists[0].uri.match(/spotify:artist:(.*)/)[1]), style: "text-decoration: none;" do %>
        <div class="card-small" style="width: 164px; height: 100%;">
          <div class="card-small-image" style="width: 164px; height: 164px;"><%= image_tag(play.album.artists[0].images[0]['url'], alt: artist.album.artists[0].name, class: "card-small-image", style:"width: 164px; height: 164px;") %></div>
          <div class="card-small-text" style="height: 18px;"><p><%= artist.album.artists.map { |artist| artist.name }.join(', ') %></p></div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>You have no shared artists</p>
  <% end %>
</div>

<h2>Your Common Tracks</h2>

<div class="scrolling-wrapper-flexbox" style="height: 100%; padding-bottom: 10px; overflow-y: hidden;">
  <% if @shared_tracks && @shared_tracks.any? %>
    <% @shared_tracks.each do |track| %>
      <%= link_to track_path(id: track.uri.match(/spotify:track:(.*)/)[1]), style: "text-decoration: none;" do %>
        <div class="card-small" style="width: 164px; height: 120%;">
            <div class="card-small-image" style="width: 164px; height: 164px;"><%= image_tag(track.album.images[0]['url'], alt: track.name, class: "card-small-image", style:"width: 164px; height: 164px;")%></div>
            <div class="card-small-text" style="height: 18px;"><p><%= play.name %></p></div>
            <div class="card-small-text-small"><p><%= track.album.artists.map { |artist| artist.name }.join(', ')%></p></div>
          </div>
      <% end %>
    <% end %>
  <% else %>
    <p>You have no shared tracks</p>
  <% end %>
</div>
