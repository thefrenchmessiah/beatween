<%= render "shared/navbar" %>
<%= render "shared/bar_4btn_filter" %>

<div>
  <div class= "show-image">
  <div class="profile-pic-left">
    <img class= "img-circle-small" src="<%= @generator_image %>" alt="">
  </div>

  <div class="comp-icon">
    <%= image_tag "compatibility_icon_pink.png" %>
    <h2> <%= @comp_percentage %> %</h2>

  </div>

  <div class="profile-pic-right">
    <img class= "img-circle-small" src="<%= @buddy_image %>" alt="">
  </div>
  </div>
</div>

<h1><%= @playlist.name %></h2>
<h3>By <%= @generator.display_name %> & <%= @buddy.display_name %></h3>

<div class="scrolling-wrapper-flexbox">
  <% if @playlist && @playlist.tracks.any? %>
    <% @playlist.tracks.each do |track| %>
      <div class= "card-small">
        <div class= card-small-image><%= image_tag(track.album.images.first["url"], alt: track.name, class: "card-small-image") %></div>
        <div class= card-small-text><p><%= track.name %> by <%= track.artists.first.name %></p></div>
      </div>
    <% end %>
  <% else %>
    <p>No tracks in the playlist</p>
  <% end %>
</div>

<button class="spotify-button">
  <a href="https://open.spotify.com/playlist/<%= @playlist.id%>">
    <%= image_tag 'Spotify_Icon_RGB_Green.png', alt: 'Spotify Icon', class:"spotify-icon" %><span>Open on Spotify</span>
  </a>
</button>
