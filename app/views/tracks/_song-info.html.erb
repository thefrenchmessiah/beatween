

<%# ------div for INFOS----- %>
<div>
  <h1>TRACK INFOS</h1>
  <div>
    <p> Song popularity: </p>
    <p><%= @song_popularity %>/100</p>
  </div>
  
  <div>
    <p> Duration: </p>
    <p><%= @song_length.to_f %>min</p>
  </div>
</div>

<%# ------div for audio features----- %>
<div class= "">
  <h3>Audio Features</h3>
  <div class="three-value-wrap">
  <div class= "value">
    <p> <i class="fa-regular fa-face-smile"></i> Positiveness: </p>
    <p><%= @song_valence%></p>
  </div>

  <div class="value">
    <p> <i class="fa-solid fa-person-walking"></i> Danceability: </p>
    <p><%= @song_danceability %></p>
  </div>

  <div class="value">
    <p><i class="fa-solid fa-bolt"></i> Energy: </p>
    <p><%= @song_energy %></p>
  </div>
</div>
</div>

<p>Song title: <%= @song_name %></p>
<p>Artist: <%= @artist_name %></p>
<p>Album: <%= @album_name %></p>