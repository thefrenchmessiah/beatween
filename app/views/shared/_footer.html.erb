<div id="footer">
<table>
  <thead>
    <tr>
      <th scope="col">
        <div class= "icon">
          <a href= root_path><i class="fa-solid fa-house"></i></a>
        </div>
      </th>

      <th scope="col">
        <div class= "icon">
          <a href="#"><i class="fa-solid fa-magnifying-glass"></i></i></a>
        </div>
      </th>
