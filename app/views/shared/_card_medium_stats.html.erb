  <div>
    <h2>Also, check this:</h2>
  </div>
  <div>
  <% popularity = @popularity %>
    <ul>
      <% sorted_albums = @albums_by_artist.sort_by { |album| -album.popularity }.take(1) %>
      <% sorted_albums.each do |album| %>
        <li><%= album.name %></li>
      <% end %>
    </ul>
  </div>
</div>

