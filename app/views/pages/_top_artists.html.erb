<div class="trends">
  <h2 style="color: #FFB9FC; font-weight: 500; margin-bottom: 10px; margin-left: 10px;">Famous this week</h2>
  <div class="scrolling-wrapper-flexbox" style="height: 100%;">
      <% @top_fifty_tracks.each do |play| %>
      <%# We call it with @track_id[1]  TODO: will do albums first%>
        <%= link_to track_path(id: play.uri.match(/spotify:track:(.*)/)[1]), style: "text-decoration: none;" do %>
          <div class= "card-small" style="width: 164px;">
            <div class= card-small-image style="width: 164px; height: 100%;"><%= image_tag(play.album.images[0]['url'], alt: play.name, class: "card-small-image", style:"width: 164px; height: 100%;")%></div>
            <div class= card-small-text><p><%= play.album.name%></p></div>
            <div class= card-small-text-small><p><%= play.album.artists.map { |artist| artist.name }.join(', ')%></p></div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>

