<div class="trends">
  <h2>Albums trending this week: </h2>
  <div class="scrolling-wrapper-flexbox">
      <% @top_fifty_tracks.each do |play| %>
      <%# We call it with @track_id[1]  TODO: will do albums first%>
        <%= link_to album_path(id: play.album.uri.match(/spotify:album:(.*)/)[1]), style: "text-decoration: none;" do %>
          <div class= "card-small">
            <div class= card-small-image><%= image_tag(play.album.images[0]['url'], alt: play.name, class: "card-small-image")%></div>
            <div class= card-small-text><p><%= play.album.name%></p></div>
            <div class= card-small-text-small><p><%= play.album.artists.map { |artist| artist.name }.join(', ')%></p></div>
          </div>
        <% end %>
      <% end %>
  </div>

  <div class="trends margin-top-20">
    <h2>Your friends top albums this month: </h2>
    <div class="scrolling-wrapper-flexbox">
      <% @friends_top_albums.each do |play| %>
      <%# We call it with @track_id[1]  TODO: will do albums first%>
        <%= link_to album_path(id: play[0].uri.match(/spotify:album:(.*)/)[1]), style: "text-decoration: none;" do %>
          <div class= "card-small">
            <div class= card-small-image><%= image_tag(play[0].images[0]['url'], alt: play[0].name, class: "card-small-image")%></div>
            <div class= card-small-text><p><%= play[0].name %></p></div>
            <div class= card-small-text-small><p><%= @friend_spotify.display_name %></p></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="trends margin-top-20">
    <h2>Your top albums this month: </h2>
    <div class="scrolling-wrapper-flexbox">
      <% @user_top_albums.each do |play| %>
      <%# We call it with @track_id[1]  TODO: will do albums first%>
        <%= link_to album_path(id: play.uri.match(/spotify:album:(.*)/)[1]), style: "text-decoration: none;" do %>
          <div class= "card-small">
            <div class= card-small-image><%= image_tag(play.images[0]['url'], alt: play.name, class: "card-small-image")%></div>
            <div class= card-small-text><p><%= play.name %></p></div>
            <div class= card-small-text-small><p><%= play.artists.map { |artist| artist.name }.join(', ')%></p></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
